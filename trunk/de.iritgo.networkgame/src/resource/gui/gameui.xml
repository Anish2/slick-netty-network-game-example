<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE themes PUBLIC "-//www.matthiasmann.de//TWL-Theme//EN" "http://hg.l33tlabs.org/twl/raw-file/tip/src/de/matthiasmann/twl/theme/theme.dtd">

<themes>
    <include filename="gui.xml"/>
    <include filename="Eforen.xml"/>

    <textures file="buttonbackgroundhl.png" format="RGBA">
        <texture name="-button.background.highlight" x="0" y="0" width="59" height="35"/>
    </textures>

    <textures file="buttonbackground.png" format="RGBA">
        <select name="button.background">
            <alias ref="-button.background.highlight" if="armed ^ selected"/>
            <texture x="0" y="0" width="59" height="35"/>
        </select>
    </textures>

    <textures file="hbuttonbg.png" format="RGBA">
        <texture name="-hbutton.background.highlight" x="0" y="0" width="38" height="60"/>
    </textures>

    <textures file="hbuttonbgb.png" format="RGBA">
        <select name="hbutton.background">
            <alias ref="-hbutton.background.highlight" if="armed ^ selected"/>
            <texture x="0" y="0" width="38" height="60"/>
        </select>
    </textures>

    <textures file="basher.png" format="RGBA">
        <texture name="-basher-0" x="0" y="32" width="32" height="32"/>

        <animation name="-basher-anim" timeSource="hover">
            <frame ref="-basher-0" duration="100"/>
            <frames count="11" x="32" y="32" width="32" height="32" offsetx="32" duration="100"/>
        </animation>

        <select name="button.basher.overlay" center="true">
            <alias ref="-basher-anim" if="hover | pressed"/>
            <alias ref="-basher-0"/>
        </select>
    </textures>

    <textures file="bomber.png" format="RGBA">
        <texture name="-bomber-0" x="0" y="0" width="32" height="32"/>

        <animation name="-bomber-anim" timeSource="hover">
            <frame ref="-bomber-0" duration="100"/>
            <frames count="11" x="32" y="0" width="32" height="32" offsetx="32" duration="100"/>
        </animation>

        <select name="button.bomber.overlay" center="true">
            <alias ref="-bomber-anim" if="hover | pressed"/>
            <alias ref="-bomber-0"/>
        </select>
    </textures>

    <textures file="bridger.png" format="RGBA">
        <texture name="-bridger-0" x="0" y="32" width="32" height="32"/>
        
        <animation name="-bridger-anim" timeSource="hover">
            <frame ref="-bridger-0" duration="100"/>
            <frames count="11" x="32" y="32" width="32" height="32" offsetx="32" duration="100"/>
        </animation>

        <select name="button.bridger.overlay" center="true">
            <alias ref="-bridger-anim" if="hover | pressed"/>
            <alias ref="-bridger-0"/>
        </select>
    </textures>

    <textures file="climber.png" format="RGBA">
        <texture name="-climber-0" x="0" y="32" width="32" height="32"/>

        <animation name="-climber-anim" timeSource="hover">
            <frame ref="-climber-0" duration="100"/>
            <frames count="7" x="32" y="32" width="32" height="32" offsetx="32" duration="100"/>
        </animation>

        <select name="button.climber.overlay" center="true">
            <alias ref="-climber-anim" if="hover | pressed"/>
            <alias ref="-climber-0"/>
        </select>
    </textures>

    <textures file="miner.png" format="RGBA">
        <texture name="-miner-0" x="0" y="32" width="32" height="32"/>

        <animation name="-miner-anim" timeSource="hover">
            <frame ref="-miner-0" duration="100"/>
            <frames count="11" x="32" y="32" width="32" height="32" offsetx="32" duration="100"/>
        </animation>

        <select name="button.miner.overlay" center="true">
            <alias ref="-miner-anim" if="hover | pressed"/>
            <alias ref="-miner-0"/>
        </select>
    </textures>

    <textures file="digger.png" format="RGBA">
        <texture name="-digger-0" x="0" y="0" width="32" height="32"/>

        <animation name="-digger-anim" timeSource="hover">
            <frame ref="-digger-0" duration="100"/>
            <frames count="13" x="32" y="0" width="32" height="32" offsetx="32" duration="100"/>
        </animation>

        <select name="button.digger.overlay" center="true">
            <alias ref="-digger-anim" if="hover | pressed"/>
            <alias ref="-digger-0"/>
        </select>
    </textures>

    <textures file="floater.png" format="RGBA">
        <texture name="-floater-0" x="0" y="0" width="32" height="32"/>

        <animation name="-floater-anim" timeSource="hover">
            <frame ref="-floater-0" duration="100"/>
            <frames count="7" x="32" y="0" width="32" height="32" offsetx="32" duration="100"/>
        </animation>

        <select name="button.floater.overlay" center="true">
            <alias ref="-floater-anim" if="hover | pressed"/>
            <alias ref="-floater-0"/>
        </select>
    </textures>

    <textures file="blocker.png" format="RGBA">
        <texture name="-blocker-0" x="0" y="0" width="32" height="32"/>

        <animation name="-blocker-anim" timeSource="hover">
            <frame ref="-blocker-0" duration="150"/>
            <frames count="5" x="32" y="0" width="32" height="32" offsetx="32" duration="150"/>
        </animation>

        <select name="button.blocker.overlay" center="true">
            <alias ref="-blocker-anim" if="hover | pressed"/>
            <alias ref="-blocker-0"/>
        </select>
    </textures>

    <textures file="pause.png" format="RGBA">
        <texture name="button.pause.overlay" center="true" x="0" y="0" width="38" height="56"/>
    </textures>

    <textures file="armageddon_anim.png" format="RGBA">
        <texture name="-armageddon-0" x="0" y="0" width="36" height="57"/>

        <animation name="-armageddon-anim" timeSource="hover">
            <frame ref="-armageddon-0" duration="100"/>
            <frames count="13" x="36" y="0" width="36" height="57" offsetx="36" duration="100"/>
        </animation>

        <select name="button.armageddon.overlay" center="true">
            <alias ref="-armageddon-anim" if="hover | pressed"/>
            <alias ref="-armageddon-0"/>
        </select>
    </textures>

    <textures file="./simple.png" format="RGBA">
        <hvsplit name="-borderG" x="60" y="0" width="9" height="9" border="3"/>
    </textures>

    <textures file="./chaos_sphere_blue_800x600.png" format="RGB" filter="linear">
        <texture name="background-image" x="0" y="0" width="800" height="600"/>
    </textures>

    <fontDef name="normal" filename="./font.fnt" color="white">
        <fontParam if="error" color="red"/>
        <fontParam if="disabled" color="gray"/>
        <fontParam if="textSelection" color="blue"/>
    </fontDef>

    <inputMapDef name="-defaultInputMap">
        <action name="selectAll">ctrl A</action>
        <action name="cut">ctrl X</action>
        <action name="copy">ctrl C</action>
        <action name="paste">ctrl V</action>
    </inputMapDef>

    <theme name="-defaults">
        <param name="background"><image>none</image></param>
        <param name="overlay"><image>none</image></param>
        <param name="font"><font>normal</font></param>
        <param name="textAlignment"><enum type="alignment">left</enum></param>
        <param name="minWidth"><int>0</int></param>
        <param name="minHeight"><int>0</int></param>
        <param name="maxWidth"><int>0</int></param>
        <param name="maxHeight"><int>0</int></param>
        <param name="inputMap"><inputMap>-defaultInputMap</inputMap></param>
    </theme>

    <theme name="button" ref="-defaults" allowWildcard="true">
        <param name=""><image>button.*</image></param>
        <param name="border"><border>background.border</border></param>
        <param name="textAlignment"><enum type="alignment">center</enum></param>
    </theme>

    <theme name="hbutton" ref="button" allowWildcard="true">
        <param name=""><image>hbutton.*</image></param>
        <param name="border"><border>background.border</border></param>
    </theme>

    <theme name="label" ref="-defaults" allowWildcard="true">
    </theme>

    <theme name="tooltipwindow" ref="-defaults">
        <param name="background"><image>-borderG</image></param>
        <param name="border"><border>background.border</border></param>
        <param name="fadeInTime"><int>0</int></param>
        <theme name="label" ref="label">
            <param name="font"><fontDef filename="./font.fnt" color="black"/></param>
        </theme>
    </theme>

    <theme name="gameuidemo" ref="-defaults">
<!--        <param name="background"><image>background-image</image></param> -->
        
        <theme name="pingu-basher" ref="button">
            <param name=""><image>button.basher.*</image></param>
            <param name="border"><border>background.border</border></param>
            <param name="tooltip"><string>Basher</string></param>
        </theme>
        <theme name="pingu-bomber" ref="button">
            <param name=""><image>button.bomber.*</image></param>
            <param name="border"><border>background.border</border></param>
            <param name="tooltip"><string>al-Qaida?</string></param>
        </theme>
        <theme name="pingu-bridger" ref="button">
            <param name=""><image>button.bridger.*</image></param>
            <param name="border"><border>background.border</border></param>
            <param name="tooltip"><string>Bridger</string></param>
        </theme>
        <theme name="pingu-climber" ref="button">
            <param name=""><image>button.climber.*</image></param>
            <param name="border"><border>background.border</border></param>
            <param name="tooltip"><string>Climber</string></param>
        </theme>
        <theme name="pingu-floater" ref="button">
            <param name=""><image>button.floater.*</image></param>
            <param name="border"><border>background.border</border></param>
            <param name="tooltip"><string>Floater</string></param>
        </theme>
        <theme name="pingu-blocker" ref="button">
            <param name=""><image>button.blocker.*</image></param>
            <param name="border"><border>background.border</border></param>
            <param name="tooltip"><string>Blocker</string></param>
        </theme>
        <theme name="pingu-digger" ref="button">
            <param name=""><image>button.digger.*</image></param>
            <param name="border"><border>background.border</border></param>
            <param name="tooltip"><string>Digger</string></param>
        </theme>
        <theme name="pingu-miner" ref="button">
            <param name=""><image>button.miner.*</image></param>
            <param name="border"><border>background.border</border></param>
            <param name="tooltip"><string>Miner</string></param>
        </theme>
        <theme name="pause" ref="hbutton">
            <param name=""><image>button.pause.*</image></param>
            <param name="border"><border>background.border</border></param>
            <param name="tooltip"><string>Pause the game</string></param>
        </theme>
        <theme name="armageddon" ref="hbutton">
            <param name=""><image>button.armageddon.*</image></param>
            <param name="border"><border>background.border</border></param>
            <param name="tooltip"><string>ARMAGEDDON !!</string></param>
        </theme>
        <theme name="fpscounter" ref="label"/>
    </theme>

    <theme name="graph" ref="-defaults">
        <param name="background"><image>eforen.graph.background</image></param>
        <param name="border"><border>background.border</border></param>
        <param name="minWidth"><int>100</int></param>
        <param name="minHeight"><int>100</int></param>
        <param name="sizeMultipleX"><int>5</int></param>
        <param name="sizeMultipleY"><int>8</int></param>
        <param name="lineStyles"><map>
            <param name="default"><map>
                <param name="color"><color>white</color></param>
                <param name="width"><float>1.0</float></param>
            </map></param>
        </map></param>
        <theme name="grapharea" ref="-defaults">
            <param name="background"><image>none</image></param>
        </theme>
    </theme>

    <theme name="resizableframe" ref="-defaults" allowWildcard="true">
        <param name="background"><image>eforen.frame.resizeable</image></param>
        <param name="border"><border>background.border</border></param>
        <param name="titleAreaTop"><int>5</int></param>
        <param name="titleAreaLeft"><int>5</int></param>
        <param name="titleAreaRight"><int>-5</int></param>
        <param name="titleAreaBottom"><int>5</int></param>
        <param name="hasCloseButton"><bool>true</bool></param>
        <param name="closeButtonX"><int>0</int></param>
        <param name="closeButtonY"><int>0</int></param>
        <param name="hasResizeHandle"><bool>true</bool></param>
        <param name="resizeHandleX"><int>0</int></param>
        <param name="resizeHandleY"><int>0</int></param>
        <param name="mouseCursor."><cursor>eforen.cursor.arrow.*</cursor></param>
        <param name="fadeColorInactive"><color>#F888</color></param>
        <param name="fadeDurationActivate"><int>200</int></param>
        <param name="fadeDurationDeactivate"><int>200</int></param>
        <param name="fadeDurationShow"><int>200</int></param>
        <param name="fadeDurationHide"><int>200</int></param>
        <theme name="title" ref="label">
            <param name="textAlignment"><enum type="alignment">top</enum></param>
        </theme>
        <theme name="closeButton" ref="button">
            <param name=""><image>eforen.frame.closebutton.*</image></param>
            <param name="border"><border>background.border</border></param>
        </theme>
        <theme name="resizeHandle" ref="-defaults"/>
    </theme>


    <theme name="desktoparea" ref="-defaults">
    
    
	<theme name="resizableframe-title" ref="resizableframe" allowWildcard="true">
        <param name="background"><image>eforen.frame.resizeable-title</image></param>
        <param name="border"><border>background.border</border></param>
        <param name="titleAreaTop"><int>10</int></param>
        <param name="titleAreaLeft"><int>30</int></param>
        <param name="titleAreaRight"><int>-70</int></param>
        <param name="titleAreaBottom"><int>27</int></param>
        <param name="hasCloseButton"><bool>true</bool></param>
        <param name="closeButtonX"><int>28</int></param>
        <param name="closeButtonY"><int>15</int></param>
    </theme>
	    
    </theme>
    
    <theme name="dialoglayout" ref="gameuidemo">
        <param name="defaultGap"><dimension>5,5</dimension></param>
        <param name="smallGap"><dimension>5,5</dimension></param>
        <param name="mediumGap"><dimension>10,10</dimension></param>
        <param name="largeGap"><dimension>15,15</dimension></param>
        <param name="namedGaps"><map>
            <param name="actionButtonsLeft"><gap>10</gap></param>
            <param name="actionButtonsTop"><gap>40</gap></param>
            <param name="gameCtrlRight"><gap>15</gap></param>
            <param name="gameCtrlTop"><gap>10</gap></param>
            <param name="statusRight"><gap>0</gap></param>
            <param name="statusBottom"><gap>0</gap></param>
        </map></param>
    </theme>
</themes>